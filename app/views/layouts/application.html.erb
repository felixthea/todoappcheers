<!DOCTYPE html>
<html>
<head>
  <title>Todo</title>
  <%= csrf_meta_tags %>
</head>
<body>
<% if logged_in? %>
  <%= current_user.username %>
  <%= button_to "Sign Out", session_url, method: :delete %>
  <%= Cheer.cheers_left(current_user) %> cheers left
  <%= Cheer.users_cheers_received(current_user)%> cheer received
<% else %>
  <%= link_to "Sign In", new_session_url %>
  <%= link_to "Sign Up", new_user_url %>
<% end %>
<br>
<% if flash[:errors] %>
  <% flash[:errors].each do |msg| %>
    <%= msg %>
  <% end %>
<% end %>
<%= yield %>

</body>
</html>
